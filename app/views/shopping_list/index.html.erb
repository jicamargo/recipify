<!-- app/views/shopping_list/index.html.erb -->

<div class="container py-2 mt-2 border rounded shadow bg-white bg-opacity-10">
  <h1 class="display-4 py-3">Shopping List</h1>


  <div class="row py-3">
    <div class="col-6">
      <p class="h4 font-weight-bold">Total Food Items: <%= @missing_foods.count %></p>
    </div>
    <div class="col-6">
      <p class="h4 font-weight-bold">Total Price: <%= number_to_currency(@total_price, unit: "$") %></p>
    </div>
  </div>

  <table class="table table-striped table-bordered rounded shadow">
    <thead>
      <tr>
        <th>Food (name)</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @missing_foods.each do |missing_food| %>
        <tr>
          <td><%= missing_food[:food].name %></td>
          <td><%= missing_food[:missing_quantity] %></td>
          <td><%= missing_food[:food].price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>