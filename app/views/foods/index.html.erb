<div class="container">

  <h1 class="display-4 py-3">Foods</h1>
  <div class="row py-1">
    <div class="col-12 text-right label-right">
      <%= link_to "Add Food", new_food_path, class: 'btn btn-primary px-sm-2 px-md-3' %>
    </div>
  </div>
  
  <table class="table table-striped table-bordered rounded shadow">
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= link_to(food.name, food_path(food)) %></td>
          <td><%= food.measurement_unit %></td>
          <td><%= number_to_currency(food.price) %></td>
          <td>
            <div class="container text-center d-flex justify-content-center gap-1">
              <%= form_with(url: delete_food_path(food), method: :delete, remote: true) do |form| %>
                <%= form.button type: :submit, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you?' } do %>
                  Delete
                <% end %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
