<div class='container py-2 mt-5 border rounded shadow bg-white bg-opacity-10 center'>
  <h1 class='py-4'>Food Details</h1>
    
  <%= render @food %>

  <div class="container mt-3">
    <div class="d-flex justify-content-center gap-2 py-4">
      <%= link_to "Edit this food", edit_food_path(@food), class: 'btn btn-secondary btn-sm mr-4' %>
      <%= link_to "Back to foods", foods_path, class: 'btn btn-secondary btn-sm mr-4' %>
      <%= button_to "Delete this food", @food, method: :delete, class: 'btn btn-danger btn-sm' %>
    </div>
  </div>
</div>


